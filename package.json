{
  "name": "cortexcss",
  "displayName": "CortexCSS",
  "description": "Syntax highlighting for CSS in TypeScript template literals with Cortex-UI",
  "publisher": "Punyarit",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.79.0"
  },
  "main": "./out/extension.js",
  "categories": [
    "Programming Languages"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Punyarit/cortexcss.git"
  },
  "activationEvents": [
    "onCommand:extension.activate"
  ],
  "contributes": {
    "languages": [
      {
        "id": "cortexcss",
        "aliases": [
          "cortexcss",
          "cortexcss"
        ],
        "extensions": [
          ".css.ts"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "cortexcss",
        "scopeName": "source.css.ts",
        "path": "./syntaxes/cortexcss.tmLanguage.json"
      }
    ],
    "iconThemes": [
      {
        "id": "material-icons-with-cortex-css",
        "label": "Material with CortexCSS Icons",
        "path": "./icons/material-icons.json"
      }
    ]
  },
  "devDependencies": {
    "vscode": "^1.1.37"
  }
}
